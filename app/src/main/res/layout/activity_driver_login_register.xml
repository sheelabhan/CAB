<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".DriverLoginRegisterActivity">

    <TextView
        android:id="@+id/driver_status"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="64dp"
        android:text="Driver Login"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/email_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Email.."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_driver"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:hint="Password...."
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/driver_login_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_driver"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="148dp"
        android:background="@color/colorAccent"
        android:text="Login" />

    <TextView
        android:id="@+id/driver_register_link"
        android:layout_width="194dp"
        android:layout_height="38dp"
        android:layout_below="@+id/driver_login_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="101dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/driver_register_btn"
        android:layout_width="259dp"
        android:layout_height="77dp"
        android:layout_below="@+id/driver_register_link"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="106dp"
        android:background="@android:color/holo_red_dark"
        android:text="Register"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="20sp" />

</RelativeLayout>